{% extends "::base.html.twig" %}

{% block title %}Geräte ändern{% endblock %}

{% block body %}
    {% include'AppBundle:Templates:header.html.twig' %}
    <div class="add-changeNavigation">
        <a class="add-changeNav" href="{{ path('changeSurvey') }}">Umfrage ändern</a>
        <a class="add-changeNav active" href="{{ path('changeDevice') }}">Geräte ändern</a>
        <a class="add-changeNav" href="{{ path('changeUser') }}">Nutzer ändern</a>
    </div>
    <main class="all-change-survey">
        <form class="change-survey-form" method="post">
            <table>
                <tr class="table-header">
                    <th></th>
                    <th>Gerätename</th>
                    <th></th>
                </tr>
                {% for device in allDevices %}
                    <tr>
                        <td class="device-id">{{ device.id }}</td>
                        <td class="icon-row">
                            <a class="info-icon-device">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="table-device">{{ device.connection }}</td>
                        <td>
                            <a class="delete-icon-device">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </form>
    </main>
    <div id="changeDevice-modal" class="modal">
        <div class="modal-content">
            <div class="modal-deviceId"></div>
            <input type="text" class="modal-device" >
            <a class="save-icon-device"><i class="fa fa-check" aria-hidden="true"></i></a>
            <a class=" modal-action modal-close" id="noChange-icon"><i class="fa fa-times" aria-hidden="true"></i></a>
        </div>
    </div>
    <div id="deleteDevice-modal" class="modal">
        <div class="modal-content">
            <p class="absolutDelete">Wollen Sie das Gerät löschen!</p>
            <button id="absoluteDeleteButton" class="modal-action modal-close waves-effect waves-green btn-flat">Ja</button>
        </div>
    </div>
{% endblock %}