{% extends "::base.html.twig" %}

{% block title %}Umfrage ändern{% endblock %}

{% block body %}
    {% include'AppBundle:Templates:header.html.twig' %}
    <div class="changeNavigation">
        <a class="changeNav active" href="{{ path('changeSurvey') }}">Umfrage ändern</a>
        <a class="changeNav" href="{{ path('changeDevice') }}">Geräte ändern</a>
        <a class="changeNav" href="{{ path('changeUser') }}">Nutzer ändern</a>
    </div>
    <main class="all-change-survey">
        <form class="change-survey-form" method="post">
            <table>
                <tr class="table-header">
                    <th></th>
                    <th>Frage</th>
                    <th>Start</th>
                    <th>Ende</th>
                    <th>Anzahl</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                {% for survey in allSurvey %}
                    <tr>
                        <td class="survey-id">{{ survey.id }}</td>
                        <td class="icon-row">
                            <a class="info-icon">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="table-question">{{ survey.question }}</td>
                        <td class="table-start">{{ survey.surveyStart|date('Y-m-d') }}</td>
                        <td class="table-end">{{ survey.surveyEnd|date('Y-m-d') }}</td>
                        <td class="table-count">{{ survey.buttonQuantity }}</td>
                        <td class="table-activity">{{ survey.status }}</td>
                        <td>
                            <a class="delete-icon">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </form>
    </main>
{% endblock %}
