{% extends "::base.html.twig" %}

{% block title %}Nutzer ändern{% endblock %}

{% block body %}
    {% include'AppBundle:Templates:header.html.twig' %}
    <div class="add-changeNavigation">
        <a class="add-changeNav" href="{{ path('changeSurvey') }}">Umfrage ändern</a>
        <a class="add-changeNav" href="{{ path('changeDevice') }}">Geräte ändern</a>
        <a class="add-changeNav active" href="{{ path('changeUser') }}">Nutzer ändern</a>
    </div>
    <main class="all-change-survey">
        <form class="change-survey-form" method="post">
            <table>
                <tr class="table-header">
                    <th></th>
                    <th>Nutzername</th>
                    <th>Rolle</th>
                    <th></th>
                </tr>
                {% for user in allUsers %}
                    <tr>
                        <td class="user-id">{{ user.id }}</td>
                        <td class="icon-row">
                            <a class="info-icon-user">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="table-username">{{ user.username }}</td>
                        <td class="table-role">{{ user.roles[0] }}</td>
                        <td>
                            <a class="delete-icon-user">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </form>
    </main>
    <div id="changeUser-modal" class="modal">
        <div class="modal-content">
            <div class="modal-userId"></div>
            <input type="text" class="modal-username" >
            <select class="modal-role"></select>
            <a class="save-icon-user"><i class="fa fa-check" aria-hidden="true"></i></a>
            <a class=" modal-action modal-close" id="noChange-icon"><i class="fa fa-times" aria-hidden="true"></i></a>
        </div>
    </div>
{% endblock %}